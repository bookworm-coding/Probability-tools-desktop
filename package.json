{
  "name": "probability-tools-desktop",
  "version": "1.0.0",
  "main": "./build/electron/main.js",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "bookworm-coding",
    "email": "bookwormkkm00@gmail.com",
    "url": "https://github.com/bookworm-coding"
  },
  "scripts": {
    "dump": "dump-stlite-desktop-artifacts",
    "serve": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux64",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "npm run build:win64",
    "build:win64": "electron-builder --win --x64"
  },
  "build": {
    "productName": "확률 도구",
    "appId": "probability.tools.desktop",
    "protocols": {
      "name": "확률 도구",
      "schemes": [
        "확률 도구"
      ]
    },
    "mac": {
      "target": [
        "default",
        "dir"
      ]
    },
    "dmg": {
      "title": "확률 도구 설치"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false
    },
    "files": ["build/**/*"],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@stlite/desktop": "0.42.2",
    "cross-env": "7.0.3",
    "electron": "28.0.0-alpha.4",
    "electron-builder": "24.8.0"
  }
}